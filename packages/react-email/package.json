{
  "name": "react-email",
  "version": "1.9.5-dev",
  "description": "A live preview of your emails right in your browser.",
  "bin": {
    "email": "./dist/source/index.js"
  },
  "types": "./dist/source/index.d.ts",
  "scripts": {
    "build": "pnpm run clean && tsc && pnpm run build:client",
    "build:client": "cd client && pnpm build && node-mv ./.next/standalone ../dist/client",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json}\"",
    "preinstall": "cd client && npm install",
    "lint": "eslint",
    "clean": "rimraf dist"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/resendlabs/react-email.git",
    "directory": "packages/react-email"
  },
  "keywords": [
    "react",
    "email"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "9.4.1",
    "@react-email/render": "0.0.6",
    "chalk": "^4.1.2",
    "chokidar": "3.5.3",
    "commander": "9.4.1",
    "esbuild": "0.16.4",
    "fs-extra": "11.1.1",
    "glob": "10.3.4",
    "log-symbols": "4.1.0",
    "normalize-path": "3.0.0",
    "ora": "5.4.1",
    "tree-node-cli": "1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.1",
    "@types/normalize-path": "3.0.0",
    "@types/shelljs": "0.8.12",
    "@types/ws": "^8.5.6",
    "cpy-cli": "^5.0.0",
    "eslint-config-custom": "workspace:*",
    "node-mv": "^0.1.3",
    "rimraf": "^5.0.5",
    "tsconfig": "workspace:*",
    "typescript": "5.1.6"
  }
}
